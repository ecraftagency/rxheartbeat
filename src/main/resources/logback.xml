<configuration>
    <property name="LOG_PATH" value="logs" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="auth_exception" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/auth_exception.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/transformer-%d{yyyy-MM-dd_HH}.log</fileNamePattern>
            <maxHistory>360</maxHistory>
        </rollingPolicy>

        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.heartbeat.service.impl.SessionLoginService" level="ERROR" additivity="true">
        <appender-ref ref="auth_exception"/>
    </logger>

    <logger name="com.heartbeat.controller.AuthController" level="ERROR" additivity="true">
        <appender-ref ref="auth_exception"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>